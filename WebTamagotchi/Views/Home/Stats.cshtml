@{
    ViewData["Title"] = "Stats";
}
@model Pet

<h1>@ViewData["Title"]</h1>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <style>
        table {
            border-collapse: collapse;
            width: 100%;
            background-color: #f5f5f5;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Optional: subtle shadow */
        }

        th, td {
            border: 1px solid #ddd;
            padding: 12px 18px;
            text-align: left;
            font-weight: normal; /* Remove bold font */
        }

        th {
            background-color: #e0e0e0;
            color: #666;
        }

        tbody tr:nth-child(even) {
            background-color: #fbfbfb; /* Alternate row colors */
        }
    </style>
</head>
<body>
    <table border="1">
        <thead>
            <tr>
                <th>Stat</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Experience (XP)</td>
                <td>@Model.XP</td>
            </tr>
            <tr>
                <td>Health</td>
                <td>@Model.Health %</td>
            </tr>
            <tr>
                <td>Food</td>
                <td>@Model.Food %</td>
            </tr>
            <tr>
                <td>Water</td>
                <td>@Model.Water %</td>
            </tr>
            <tr>
                <td>Stamina</td>
                <td>@Model.Stamina %</td>
            </tr>
        </tbody>
    </table>
</body>
</html>
